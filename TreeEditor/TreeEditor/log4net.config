<?xml version="1.0"?>
<!--

   log4net level:ALL< DEBUG < INFO < WARN < ERROR <FATAL 
   -->
<log4net>
  <!-- The DebugFileAppender writes all messages to a log file-->
  <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="appdbug.log" />
    <threshold value="ALL" />
    <appendToFile value="false" />  
    <datePattern value="yyyyMMdd" />    
    <maximumFileSize value="20MB" />
    <maxSizeRollBackups value="10" />
    <rollingStyle value="Size" />
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern" value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
    </layout>
  </appender>
  <appender name="TextBoxAppender" type="SgSoft.Log4Net.TextBoxAppender" >
    <threshold value="INFO" />
    <layout type="log4net.Layout.PatternLayout">
      <param name="Header" value="[Header]\r\n"/>
      <param name="Footer" value="[Footer]\r\n"/>
      <param name="ConversionPattern" value="[%t] %-5p %c [%x] - %m%n" />
    </layout>
  </appender>
  <root>
    <!-- add other appenders here and the log messages will be sent to every listed appender -->
    <appender-ref ref="TextBoxAppender" />
    <appender-ref ref="RollingLogFileAppender" />
    
  </root>
</log4net>